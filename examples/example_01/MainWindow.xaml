<Window x:Class="example_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:example_01"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <TabControl Style="{DynamicResource MaterialDesignNavigatilRailTabControl}">
            <TabItem Header="RedView">
                <Border Background="Red"/>
            </TabItem>
            <TabItem Header="GreenView">
                <Border Background="Green" />
            </TabItem>
            <TabItem Header="BlueView">
                <Border Background="Blue" />
            </TabItem>
            <TabItem Header="WhiteView">
                <Border Background="White" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
